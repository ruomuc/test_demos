<%- include('header') -%>

<% if (ctx.flash.success || ctx.flash.warning){ %>

<% }else{ %>
<div class="panel panel-default signin">
    <div class="panel-body">

        <form action="/signin" method="POST" role="form">
            <legend></legend>

            <div class="form-group">
                <label for="">用户名</label>
                <input type="text" class="form-control" name="name" id="" placeholder="用户名/邮箱">
            </div>

            <div class="form-group">
                <label for="">密码</label>
                <input type="password" class="form-control" name="password" id="" placeholder="以字母开头，不少于六位">
            </div>

            <button type="submit" class="btn btn-primary">确定</button>
            <a href="/signup" style="margin:60px">还没账号,点击注册>></a>
        </form>

    </div>
</div>
<% } %>

